<!-- Card container -->
<div class="card">
  <div class="card-body">
    <!-- Page title -->
    <h1 class="card-title">Edit Post</h1>
    
    <!-- Edit post form -->
    <form class="edit-post-form" data-post-id="{{post.id}}">
      <!-- Field for post title -->
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" class="post-title-input form-control" value="{{post.title}}">
      </div>
      
      <!-- Field for post content -->
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea id="post-content" class="post-content-input form-control">{{post.content}}</textarea>
      </div>
      
      <!-- Submit button -->
      <br/>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
  </div>
</div>

<!-- Script for editing a post -->
<script src="/js/edit.js"></script>
